{
    "version": "2", 
    "templates":  [ 
    {
        "type": "3",
        "title": "Nextcloud",
        "description": "Nextcloud using MariaDB for database, redis for web cache and Collabora for office",
        "logo": "https://raw.githubusercontent.com/SelfhostedPro/selfhosted_templates/master/Images/nextcloud-icon.png",
        "image": "linuxserver/nextcloud:latest",
        "name": "Nextcloud",
        "categories": [
            "Cloud",
            "Productivity",
            "Tools",
            "Other",
            "Web"
        ],
        "platform": "linux",
        "env": [
            {
                "default": "1000",
                "label": "Permission User ID",
                "description": "ID of the user running the container",
                "name": "PUID"
            },
            {
                "default": "1000",
                "label": "Permission Groud ID",
                "description": "Group ID of the user running the container",
                "name": "PGID"
            },
            {
                "label": "Database Password",
                "name": "DATABASE_PASSWORD"
            },
            {
                "label": "MySQL Root Password",
                "name": "MYSQL_ROOT_PASSWORD"
            },
            {
                "label": "Nextcloud Port",
                "name": "PORT"
            },
            {
                "label": "Data Mount Path",
                "description": "Path to the pre-mounted directory where NC data will be stored",
                "name": "MOUNTED_DATA_PATH",
                "default": "/mnt"
            },
            {
                "label": "Database Mount Path",
                "description": "Path to the pre-mounted directory where the database will be stored",
                "name": "MOUNTED_DATABASE_PATH",
                "default": "/mnt"
            },
            {
                "label": "Domain",
                "name": "domain",
                "default": "example.com"
            },
            {
                "label": "Collabora Domain Prefix",
                "name": "COLLABORA_PREFIX",
                "default": "office"
            }
        ],
        "repository": {
            "url": "https://github.com/yarcod/nextcloud-stack",
            "stackfile": "nextcloud.yml"
        }
    } ]
}
